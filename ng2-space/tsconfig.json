{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/app/*",
      ],
      "dev": ["./projects/edz-ng2-library/src"],
    }
  },
  "include": [
    "src/environments/*.ts",
    "projects/edz-ng2-library/src/edz-ng2-library.module.ts",
    "projects/edz-ng2-library/src/lib/**/*.ts",
    "proxy.conf.js",
    ".eslintrc.js",
    ".huskyrc.js",
    ".lintstagedrc.js",
    ".stylelintrc.js",
  ]
}
